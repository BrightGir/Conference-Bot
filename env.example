# ============ Telegram Bot Configuration ============
# Получите токен от @BotFather в Telegram
BOT_NAME=@YourBotName
BOT_KEY=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Токен для получения админ-прав (придумайте надежный)
ADMIN_TOKEN=your_secure_admin_token_here

# ============ PostgreSQL Database ============
DB_NAME=conference_db
DB_USER=postgres
DB_PASSWORD=change_this_password
DB_PORT=5432
DB_EXTERNAL_PORT=5432

# Database connection URL (обычно не требует изменений для Docker)
DB_URL=jdbc:postgresql://db:5432/conference_db
DB_DRIVER_CLASS_NAME=org.postgresql.Driver

# ============ Hibernate Configuration ============
# update - обновляет схему при изменениях
# create-drop - пересоздает схему при каждом запуске (НЕ для production!)
# validate - только проверяет соответствие схемы
HIBERNATE_DDL_AUTO=update
HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# Показывать SQL запросы в логах (true для отладки, false для production)
DEBUG_SQL=false

# ============ Redis Configuration ============
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_EXTERNAL_PORT=6379

